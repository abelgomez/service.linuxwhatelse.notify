<?xml version="1.0" encoding="UTF-8" standalone="yes"?>
<addon id="service.linuxwhatelse.notify"
	   name="Notify"
	   version="2.0.0"
	   provider-name="linuxwhatelse">

	<requires>
		<import addon="xbmc.python" version="2.24.0"/>

        <import addon="script.module.pyqrcode" version="0.0.1"/>
        <import addon="script.module.linuxwhatelse.mapper" version="3.0.0"/>
	</requires>

	<extension point="xbmc.python.script" library="script.py">
		<provides>executable</provides>
	</extension>

	<extension point="xbmc.service" library="service.py" start="login"/>

	<extension point="xbmc.addon.metadata">
		<license>GNU GENERAL PUBLIC LICENSE Version 2, June 1991</license>
		<platform>all</platform>
		<summary lang="en">Official Notify-Addon for Kodi</summary>
		<description lang="en">
The Android-App is currently in beta. To participate in the beta-test you have to join the linuxwhatelse community on Google+ http://goo.gl/UvMw3n
		</description>
	</extension>
</addon>
